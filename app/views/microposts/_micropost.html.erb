<li id="micropost-<%= micropost.id %>" class="micropost-item">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user, class: "micropost-gravatar" %>
  <div class="micropost-content">
    <span class="user"><%= link_to micropost.user.name, micropost.user, class: "user-link" %></span>
    <p class="content"><%= micropost.content %></p>
    <span class="timestamp">
      Posted <%= time_ago_in_words(micropost.created_at) %> ago.
      <% if current_user?(micropost.user) %>
        | <%= link_to "delete", micropost, data: { turbo_method: :delete, confirm: "You sure?" }%>
      <% end %>
    </span>
  </div>
</li>