<% provide(:title, @user.name) %>
<div class="user-show">

  <aside class="user-info">
    <section>
      <h1 class="user-header">
        <%= gravatar_for @user, size: 100 %>
        <span class="user-name"><%= @user.name %></span>
      </h1>
    </section>
  </aside>

  <div class="content">
    <div class="form-container">
      <div class="jumbotron">
        <div class="micropost-section">
          <% if @user.microposts.any? %>
            <h3>Microposts (<%= @user.microposts.count %>)</h3>
            <ol class="microposts">
              <%= render @microposts %>
            </ol>
            <%= paginate @microposts %>
          <% else %>
            <h3>Microposts</h3>
            <p>No microposts yet.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>